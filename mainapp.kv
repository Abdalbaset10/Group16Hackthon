WindowManger:
    HomeWindo:
    RegiWindo:
    Loginwindo:

<HomeWindo>
    name:"Home"
    GridLayout:
        cols:1
        Label:
            text:"Welcome to School App"
        Button:
            text:"Register"
            on_release:
                app.root.current="Register"
                root.manager.transition.direction="left"
        Button:
            text:"Login"
            on_release:
                app.root.current="Login"
                root.manager.transition.direction="left"


<RegiWindo>
    name:"Register"
    GridLayout:
        cols:1
        Label:
            text:"Register"

        GridLayout:
            cols:2
            Label:
                text:"ID number"
            TextInput:
                id:ID
                multiline:False
            Label:
                text:"Full Name"
            TextInput:
                id:F_name
                multiline:False
            Label:
                text:"date of birth(dd/mm/yyyy)"
            TextInput:
                id:date
                multiline:False
            Label:
                text:"Username"
            TextInput:
                id:Username
                multiline:False
            Label:
                text:"Password"
            TextInput:
                id:Pass
                password:True
                multiline:False
        GridLayout:
            cols:2
            Button:
                text:"Back"
                size_hint:0.5,0.5
                on_release:
                    app.root.current="Home"
                    root.manager.transition.direction="right"
            Button:
                text:"Submit"
                size_hint:0.5,0.5
                on_release:


<Loginwindo>
    name:"Login"
    GridLayout:
        cols:1
        Label:
            text:"Login"
        GridLayout:
            cols:2
            Label:
                text:"Username"
            TextInput:
                id:Username
                multiline:False
            Label:
                text:"Password"
            TextInput:
                id:PassE
                password:True
                multiline:False

        GridLayout:
            cols:2
            Button:
                text:"Back"
                on_release:
                    app.root.current="Home"
                    root.manager.transition.direction="right"
            Button:
                text:"Login"
                on_release:
