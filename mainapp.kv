                    root.manager.transition.direction="right"
            Button:
                text:"Delete User"
                on_release:
                    app.root.current="MangerDuser"
                    root.manager.transition.direction="left"


        GridLayout:
            cols:2
            Button:
                text:"Make Teacher"
                on_release:
                    app.root.current="MangerMakeTeacher"
                    root.manager.transition.direction="left"


            Button:
                text:"nothing"
                on_release:

<MangerDuser>
    name:"MangerDuser"
